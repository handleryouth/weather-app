<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.css" />
  <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
  <link rel="stylesheet" href="css/styles.css">
  <title>Weather App</title>
</head>

<body>


  <div class="container"></div>


  <div class="search">
    <form action="/" method="post">
      <input type="text" name="customCity" placeholder="Search for city">
    </form>
  </div>

  <div class="upper">
    <div class="upper-left">
      <h1><%= cityName %></h1>
      <p><%= date %></p>
      <img src=<%= icon %> alt="Weather Icon">
      <p id="weatherdesc"><%= description %></p>
    </div>

    <div class="upper-right">
      <h1><%= temperature %> <span>&#176;</span>C </h1>
      <div class="alternate-degree">
        <p><%= fahrenheit %><span>&#176;</span>F/ <%= kelvin %>K</p>
      </div>

    </div>
  </div>


  <div class="option-type">
    <p id="hourly">Hourly</p>
    <p id="daily">Daily</p>
    <p>Details</p>
    <p>Precipitation</p>
  </div>

  <div class="description">

    <!-- Slider main container -->
    <div class="swiper-container slide1">
      <!-- Additional required wrapper -->


      <div class="swiper-wrapper">
        <!-- Slides -->
        <div class="swiper-slide">
          <% for (let i = 0; i < 4; i++){ %>
          <div class="condition">
            <h3><%= hourlyList[i]%></h3>
            <img src=<%= hourlyIcon[i]%> alt="Weather Icon">
            <p><%= Math.ceil(hourlyTemperature[i]) %><span>&#176;</span>C</p>
          </div>
          <% } %>
        </div>
        <div class="swiper-slide">

          <% for (let i = 4; i < 8; i++){ %>
          <div class="condition">
            <h3><%= hourlyList[i]%></h3>
            <img src=<%= hourlyIcon[i]%> alt="Weather Icon">
            <p><%= Math.ceil(hourlyTemperature[i]) %><span>&#176;</span>C</p>
          </div>
          <% } %>

        </div>



        <div class="swiper-slide">

          <% for (let i = 8; i < 12; i++){ %>
          <div class="condition">
            <h3><%= hourlyList[i]%></h3>
            <img src=<%= hourlyIcon[i]%> alt="Weather Icon">
            <p><%= Math.ceil(hourlyTemperature[i]) %><span>&#176;</span>C</p>
          </div>
          <% } %>


        </div>

        <div class="swiper-slide">

          <% for (let i = 12; i < 16; i++){ %>
          <div class="condition">
            <h3><%= hourlyList[i]%></h3>
            <img src=<%= hourlyIcon[i]%> alt="Weather Icon">
            <p><%= Math.ceil(hourlyTemperature[i]) %><span>&#176;</span>C</p>
          </div>
          <% } %>



        </div>

        <div class="swiper-slide">

          <% for (let i = 16; i < 20; i++){ %>
          <div class="condition">
            <h3><%= hourlyList[i]%></h3>
            <img src=<%= hourlyIcon[i]%> alt="Weather Icon">
            <p><%= Math.ceil(hourlyTemperature[i]) %><span>&#176;</span>C</p>
          </div>
          <% } %>


        </div>


        <div class="swiper-slide">

          <% for (let i = 20; i < 24; i++){ %>
          <div class="condition">
            <h3><%= hourlyList[i]%></h3>
            <img src=<%= hourlyIcon[i]%> alt="Weather Icon">
            <p><%= Math.ceil(hourlyTemperature[i]) %><span>&#176;</span>C</p>
          </div>
          <% } %>

        </div>

      </div>


      <!-- If we need pagination -->
      <div class="swiper-pagination pagination1"></div>

      <!-- If we need navigation buttons -->
      <div class="swiper-button-prev prev-slide1"></div>
      <div class="swiper-button-next next-slide1"></div>

    </div>




    <!-- Slider main container -->
    <div class="swiper-container slide2 notshowed">
      <!-- Additional required wrapper -->
      <div class="swiper-wrapper">
        <!-- Slides -->
        <div class="swiper-wrapper">

          <div class="swiper-slide">

            <% for (let i = 0; i < 4; i++){ %>
            <div class="condition">
              <h3><%= dailyList[i]%></h3>
              <img src=<%= dailyIcon[i]%> alt="Weather Icon">
              <p><%= Math.ceil(dailyTemperature[i]) %><span>&#176;</span>C</p>
            </div>
            <% } %>

          </div>

          <div class="swiper-slide">

            <% for (let i = 4; i < 7; i++){ %>
            <div class="condition">
              <h3><%= dailyList[i]%></h3>
              <img src=<%= dailyIcon[i]%> alt="Weather Icon">
              <p><%= Math.ceil(dailyTemperature[i]) %><span>&#176;</span>C</p>
            </div>
            <% } %>

          </div>

        </div>

      </div>
      <!-- If we need pagination -->
      <div class="swiper-pagination pagination2"></div>

      <!-- If we need navigation buttons -->
      <div class="swiper-button-prev prev-slide2"></div>
      <div class="swiper-button-next next-slide2"></div>

    </div>


  </div>



  <script src="https://unpkg.com/swiper/swiper-bundle.js"></script>
  <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
  <script type="text/javascript" src="index.js"></script>

</body>

</html>
